<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/topRightCircle"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:alpha="0.7"
        android:src="@drawable/purple_gradient_circle"
        android:contentDescription="Large top right purple gradient circle background" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:text="Jerry SQLite Project"
        android:textAlignment="gravity"
        android:textColor="#673AB7"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="50dp"
        android:text="Create account"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="8dp"
        android:text="Already have an account? "
        android:textColor="#6B7280"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/signInLink"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBaseline="@id/subtitle"
        android:layout_toEndOf="@id/subtitle"
        android:clickable="true"
        android:focusable="true"
        android:text="sign in"
        android:textColor="#7C3AED"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/subtitle"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Name"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColorHint="#9CA3AF"
        android:textSize="12sp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/nameInput"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Email or phone"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColorHint="#9CA3AF"
        android:textSize="12sp"
        android:inputType="textEmailAddress" />

    <RelativeLayout
        android:id="@+id/passwordContainer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/emailInput"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext">

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Password"
            android:paddingStart="16dp"
            android:paddingEnd="48dp"
            android:textColorHint="#9CA3AF"
            android:textSize="12sp"
            android:inputType="textPassword"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/passwordToggle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7dp"
            android:clickable="true"
            android:contentDescription="Toggle password visibility"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_eye_closed" />

    </RelativeLayout>

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/passwordContainer"
        android:layout_marginTop="24dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#7C3AED"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:drawableEnd="@drawable/ic_sign_in_alt"
        android:drawablePadding="8dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:fontFamily="sans-serif-medium" />

</RelativeLayout>